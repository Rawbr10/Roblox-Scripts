local gui = Instance.new("ScreenGui")
gui.DisplayOrder = 9999
gui.Name = "NotificationGui"
gui.ResetOnSpawn = false
gui.IgnoreGuiInset = true -- Makes the background cover the full screen
gui.Parent = game:GetService("Players").LocalPlayer:WaitForChild("PlayerGui")

-- Full-screen solid gray background
local background = Instance.new("Frame")
background.Size = UDim2.new(1, 0, 1, 0)
background.Position = UDim2.new(0, 0, 0, 0)
background.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
background.BackgroundTransparency = 0 -- Fully visible
background.ZIndex = 0
background.Parent = gui

-- Single centered message
local label = Instance.new("TextLabel")
label.Size = UDim2.new(0.6, 0, 0.09, 0)
label.Position = UDim2.new(0.21, 0, 0.25, 0)
label.BackgroundTransparency = 1
label.TextColor3 = Color3.fromRGB(255, 255, 255)
label.Font = Enum.Font.GothamBold
label.TextScaled = true
label.Text = "Script Made By XZOfficialC"
label.ZIndex = 1
label.Parent = gui

-- Auto-remove after 10 seconds
task.delay(800, function()
    gui:Destroy()
end)
